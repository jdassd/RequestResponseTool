{
  "manifest_version": 3,
  "name": "Request Response Tool",
  "version": "1.0.0",
  "description": "A browser extension with a full-page configuration tab.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open Configuration"
  },
  "permissions": [
    "tabs",
    "storage"
  ]
}